<%= form_with(model: [journal, task]) do |form| %>

  <% if task.errors.any? %>

        <section class="notification is-danger has-text-centered mt-3  mb-3">
      <div class="is-size-6 has-text-weight-bold has-text-centered">
          <ul>
              <% task.errors.each do |field, error| %>
                  <li><b><%= field.upcase %></b> <%= error %>!</li>
              <% end %>
          </ul>
      </div>
      </section>
   
  <% end %>


  <div class="field">
  <div class="control has-icons-left has-icons-right">
    <%= form.text_field :name, placeholder: "Task Name", class: "input", autocomplete: :off %>
    <span class="icon is-left">
      <i class='bx bx-task is-size-4'></i>
    </span>
  </div>
  </div>

  <div class="field">
  <div class="control">
    <%= form.rich_text_area :description, placeholder: "Task Description", class: "textarea", autocomplete: :off, maxlength: 2500 %>
  </div>
  </div>

<div class="field">
<div class="control">

  <%= form.label :deadline, class:"has-text-white" do%>
  <span>Set Deadline:</span>
  <% end %>
  <%= form.date_field :deadline, class: "input" %>

</div>
</div>

<div class="field">
<div class="control">

  <%= form.label :completed, class:"has-text-white" do%>
  <span>Set Status:</span>
  <% end %>
  <%= form.select :completed, Task::COMPLETED_OPTIONS, class:"select"%>

</div>
</div>
  

  <div class="actions">
    <%= form.button class: "button start-now-two" do %> 
          <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'Create' %>
          <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'New' %>
          <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Update' %>
          <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Edit' %>
          <%= I18n.t(:new) if action_name.capitalize == "New" || action_name.capitalize == "Bagong" %><%= I18n.t(:edit) if action_name.capitalize == "Edit" || action_name.capitalize == "Baguhin ang" %> <%= I18n.t(:task)%>
        <% end %>

      <%= link_to journal do%>
        <div class="button start-now-three">
          <i class="fas fa-undo mr-2"></i> <%= I18n.t(:cancel)%>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
