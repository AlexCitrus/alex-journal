<%= form_with(model: [journal, task]) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
  <div class="control has-icons-left has-icons-right">
    <%= form.text_field :name, placeholder: "Task Name", class: "input", autocomplete: :off %>
    <span class="icon is-left">
      <i class="fas fa-cogs"></i>
    </span>
  </div>
  </div>

  <div class="field">
  <div class="control">
    <%= form.rich_text_area :description, placeholder: "Task Description", class: "textarea", autocomplete: :off, maxlength: 2500 %>
  </div>
  </div>

  

  <div class="actions">
    <%= button_tag :submit, class:"button start-now-two" do %>
        <% if action_name == 'new'%>
          <i class="fas fa-plus mr-3"></i>
          Create Task
        <% elsif action_name == 'edit' %>
          <i class="fas fa-plus mr-3"></i>
          Update Task
        <% end %>
      <% end %>

      <%= link_to journals_path do%>
        <div class="button start-now-three">
          <i class="fas fa-undo mr-2"></i> Cancel
        </div>
      <% end %>
    </div>
  </div>
<% end %>
