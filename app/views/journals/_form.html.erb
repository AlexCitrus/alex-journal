<%= form_with(model: journal) do |form| %>
  <% if journal.errors.any? %>

        <section class="hero is-small is-danger container-errors mb-3">
      <div class="hero-body">
          <ul>
              <% journal.errors.each do |field, error| %>
                  <li><b><%= field.upcase %></b> <%= error %>!</li>
              <% end %>
          </ul>
      </div>
      </section>
   
  <% end %>
  


    <div class="field mb-3">
    <div class="control has-icons-left has-icons-right">
      
      <%= form.text_field :name, placeholder: "Journal Name", class: "input", autocomplete: :off %>
      <span class="icon is-left">
      <i class='bx bxs-pencil' ></i>
    </span>
    </div>
    </div>

    <div class="actions">

       <%= form.button class: "button start-now-two" do %> 
          <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'Create' %>
          <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'New' %>
          <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Update' %>
          <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Edit' %>
          <%= action_name.capitalize %> Journal
        <% end %>

      <%= link_to journals_path do%>
        <div class="button start-now-three">
          <i class="fas fa-undo mr-2"></i> Cancel
        </div>
      <% end %>
    </div>

<% end %>
