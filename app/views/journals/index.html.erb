<p id="notice"><%= notice %></p>


<div
  id="home-dashboard-top-statistics"
  class="box has-background-info-dark has-text-white has-text-weight-semibold is-flex is-align-items-center is-justify-content-space-between"
>
  <div class="is-size-4">
    <i class="fas fa-book-open mr-1" aria-hidden="true"></i>
    Your Journals
  </div>
  <div class="categories-progress-container">
    0 / 0 tasks are completed!
    <progress
      class="progress is-success journal-progress"
      value="0"
      max="0"
    ></progress>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @journals.each do |journal| %>
      <tr>
        <td><%= link_to journal.name, journal %></td>
        <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
        <td>
          <%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
