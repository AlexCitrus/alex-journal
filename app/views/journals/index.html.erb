<p id="notice"><%= notice %></p>


<div
  id="home-dashboard-top-statistics"
  class="box has-background-info-dark has-text-white has-text-weight-semibold is-flex is-align-items-center is-justify-content-space-between"
>
  <div class="is-size-4">
    <i class="fas fa-book-open mr-1" aria-hidden="true"></i>
    Your Journals
  </div>
  <div class="categories-progress-container">
    0 / 0 tasks are completed!
    <progress
      class="progress is-success journal-progress"
      value="0"
      max="0"
    ></progress>
  </div>
</div>



<div class="tile tile-container is-ancestor">
<% @journals.each do |journal| %>
  <div class="tile tile-item is-parent">
    <article class="tile is-child box">
      <p class="title"><%= link_to journal.name, journal %></p>
      <div class="tile-actions">
      <%= link_to edit_journal_path(journal), class:"button is-warning is-light has-text-warning action-tile-button mr-2" do%>
         <i class="fas fa-edit" aria-hidden="true"></i>
      <% end %>
      <%= link_to journal, method: :delete, data: { confirm: 'Are you sure?' }, class:"button is-danger is-light has-text-danger action-tile-button" do %>
        <i class="far fa-trash-alt" aria-hidden="true"></i>
      <% end %>
      </div>
      
    </article>
  </div>
  <% end %>
</div>
