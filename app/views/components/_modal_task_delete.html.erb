<div class="modal modal_delete fade" >
  <div class="modal-background"></div>
  <div class="modal-content has-background-light p-3 py-6">
    <p class="has-text-centered has-text-black-bis mb-6">
      Are you sure you want to delete this task ?
    </p>

    <div class="is-flex is-justify-content-center">
      <button 
        class="modal-cancel button is-warning m-2" 
      >
        <i class="fas fa-undo-alt mr-3"></i> Cancel
      </button>
      <%= link_to journal_task_path(@journal, task), method: :delete, class:"button has-text-white m-2 is-danger" do %>
        <i class='bx bxs-trash is-size-5 mr-3' ></i> Confirm
      <% end %>

    </div>
  </div>
</div>